<?xml version="1.1" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/borde"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:elevation="2in"
        android:layout_marginRight="2dp"
        >

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userviewproduct"
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_shopping_cart_checkout_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/userproductviewname"
                android:layout_marginTop="10px"
                android:textAlignment="center"
                android:textSize="10dp"
                android:text="@string/product_name"
                />

            <TextView
                android:id="@+id/userproductviewprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Price"
                android:textAlignment="center"
                android:textColor="#F61303"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/usercallnow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/category" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Button
                android:id="@+id/viewim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/imgview"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:text="Full\nImage"
                android:textSize="10dp"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/userviewdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttonbg"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:text="send\nMessage"
                android:textSize="10dp"
                android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>



</androidx.cardview.widget.CardView>